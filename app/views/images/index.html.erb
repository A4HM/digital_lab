<%= turbo_frame_tag "content_frame" do%>
  <div id="<%=@lab_sub_section.id%>" class="container">
    <div id="imagesParent" class="row justify-content-center" style="max-width:100vw">
      <%if @images.count < 1%>
        <h1>Empty</h1>
      <%else%>
        <%@images.each do |image|%>
          <div class="col-12 text-center" style="height:90vh; margin-bottom: 10vh; padding:0px">
            <%= image_tag image , class: "rounded-3 shadow", style: "height: 100%; width: auto"%>
            <%if user_signed_in?%>
            <p class="mb-0"><%= image.filename%></p>
              <%=button_to "Delete", image_path(image.id), class: "btn btn-danger", style: "display:inline-block", method: :delete, data: { turbo_confirm: "Are you sure? This can't be reversed" }%>
            <%end%>
          </div>
        <%end%>
      <%end%>
    </div>
  </div>
<%end%>