<!-- About us header -->
<div class="about-us-header">
  <div>
    <h1>About Digital Lab</h1><br/>
    <p>Innovative peer to peer teaching platform for medical laboratory content supervised by faculty of medicine, university of tabuk.</p>
    <p>The website contains informative, summarized and high-yield content to improve students' skills in anatomy, physiology, biochemistry, microbiology, histology and pathology.</p> 
  </div>
</div>
<!-- about us header end -->





<!-- Labs section -->
<div id="labsSection" class="container mt-3 mb-5">
  <h3>Labs</h3>
  <hr/>

  <div class="container px-5">
    <div class="row g-3">

      <% @labs.each do |lab| %>
        <div class="col-md-6 col-sm-12">
          <%= link_to lab_lab_sections_path(lab) do %>
            <div class="scale-on-hover rounded border p-2 bg-light">
              <span style="font-size:18px"><%=lab.name%></span>
            </div>
          <% end %>
        </div>
      <%end%>

    </div>
  </div>

</div>
<!-- Labs section end-->




